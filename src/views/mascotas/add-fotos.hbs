<div class="mb-5 col-md-10 mx-auto mt-4 ">
    <div class="card formulario">
        <div class="card-header mb-3 letra d-flex justify-content-center fw-bold text-dark">
            <h4><i class="fa-solid fa-pen-to-square text-success"></i>Agregar Fotos</h4>
        </div>
       
        {{#if photos}}
        <div class="d-flex justify-content-center">
            <div class="swiper mySwiper mb-5">
                <div class="swiper-wrapper">
                    {{#each photos}}
                    <img src="{{imageURL}}" class="swiper-slide">
              
                    {{/each}}
                </div>
                <div class="swiper-pagination"></div>
            </div>
        </div>
        {{/if}}
        <div class="card-body">
            <form action="/mascotas/addfotos/{{mascota._id}}?_method=PUT" method="POST"
                  enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
                <div class="baner mb-4">
                    <div class="card-header mb-3 letra d-flex justify-content-center fw-bold text-dark">
                        <h4><i class="fa-solid fa-image text-danger"></i>Imagenes</h4>
                    </div>
                    <div class="form-group">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Imagen ID:</th>
                                    <th>Operaciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each photos}}
                                <tr>
                                    <td>
                                        {{public_id}}
                                    </td>
                                    <td>

                                        <a href="{{imageURL}}" target="_blanck" class="btn btn-primary">Ver</a>
                                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Borrar</a>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                    <div class="mb-3">
                        <label for="formFileDisabled" class="form-label">Selecciona las Imagenes</label>
                        <input type="file" name="image" class="form-control form-control-sm" id="formFileSm" required>
                    </div>
                </div>
                <div class="d-flex justify-content-center olvide1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>