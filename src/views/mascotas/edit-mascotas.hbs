<div class="mb-5 col-md-10 mx-auto mt-4 ">
    <div class="card formulario">
        <div class="card-header mb-3 letra d-flex justify-content-center fw-bold text-dark">
            <h4><i class="fa-solid fa-pen-to-square text-success"></i>Editar Mascota</h4>
        </div>
        <div class="d-flex justify-content-center">
            <div>
                <img src="{{QR}}">
                <br>
                <div><a class="d-flex p-3 justify-content-center" href="{{QR}}" download="Ecuapets {{mascota.nombre}}">
                        <h4><i class="fa-solid fa-download text-primary"></i></h4>
                    </a></div>
            </div>
        </div>
        <div class="card-body">
            <form action="/mascotas/edit-mascotas/{{mascota._id}}?_method=PUT" method="POST"
                enctype="multipart/form-data">
                <input type="hidden" name="_method" value="PUT">
                <div class="baner mb-4">
                    <div class="card-header mb-3 letra d-flex justify-content-center fw-bold text-dark">
                        <h4><i class="fa-solid fa-shield-dog text-danger"></i>Datos Basicos</h4>
                    </div>
                    <div class="mb-4 d-flex justify-content-between">
                        <div class="">
                            <label class="form-label fw-bold">Nombre de la Mascota:</label>
                            <p>{{mascota.nombre}}</p>
                        </div>
                        <div class="">
                            <label class="form-label fw-bold">Fecha de Nacimiento:</label>
                            <p>{{mascota.fechanacimiento}}</p>
                        </div>
                    </div>
                    <div class="mb-4 d-flex justify-content-between">
                        <div class="">
                            <label class="form-label fw-bold">Especie:</label>
                            <p>{{mascota.especie}}</p>
                        </div>
                        <div class="">
                            <label class="form-label fw-bold">Raza:</label>
                            <p>{{mascota.raza}}</p>
                        </div>
                        <div class="">
                            <label class="form-label fw-bold">Genero:</label>
                            <p>{{mascota.genero}}</p>
                        </div>
                    </div>
                </div>
                <div class="baner mb-4">
                    <div class="card-header mb-3 letra d-flex justify-content-center fw-bold text-dark">
                        <h4><i class="fa-solid fa-notes-medical text-danger"></i>Datos Medicos</h4>
                    </div>
                    <div class="mb-4 d-flex justify-content-around">
                        <div class="mx-2">
                            <label class="form-label fw-bold">Primera Vacuna</label>
                            <div class="form-group">
                                <input type="text" name="v1" class="form-control" placeholder="Nombre de La Vacuna"
                                    value="{{mascota.v1}}">
                            </div>
                        </div>
                        {{#if mascota.v1}}
                        <div class="md-5">
                            <label class="form-label fw-bold">Fecha</label>
                            <div class="form-group">
                                <p>{{mascota.fechav1}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="md-5 mx-2">
                            <label class="form-label fw-bold">Fecha Primera Vacuna</label>
                            <div class="form-group">
                                <input type="date" name="fechav1" class="form-control" placeholder="Title"
                                    value="{{mascota.fechav1}}">
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{#if mascota.v1}}
                    <div class="mb-4 d-flex justify-content-around">
                        <div class="mx-2">
                            <label class="form-label fw-bold">Segunda Vacuna</label>
                            <div class="form-group">
                                <input type="text" name="v2" class="form-control" placeholder="Nombre de La Vacuna"
                                    value="{{mascota.v2}}">
                            </div>
                        </div>
                          {{#if mascota.v2}}
                        <div class="md-5">
                            <label class="form-label fw-bold">Fecha</label>
                            <div class="form-group">
                                <p>{{mascota.fechav2}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="md-5 mx-2">
                            <label class="form-label fw-bold">Fecha Segunda Vacuna</label>
                            <div class="form-group">
                                <input type="date" name="fechav2" class="form-control" placeholder="Title"
                                    value="{{mascota.fechav2}}">
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{/if}}
                    {{#if mascota.v2}}
                    <div class="mb-4 d-flex justify-content-around">
                        <div class="mx-2">
                            <label class="form-label fw-bold">Tercera Vacuna</label>
                            <div class="form-group">
                                <input type="text" name="v3" class="form-control" placeholder="Nombre de La Vacuna"
                                    value="{{mascota.v3}}">
                            </div>
                        </div>
                          {{#if mascota.v3}}
                        <div class="md-5">
                            <label class="form-label fw-bold">Fecha</label>
                            <div class="form-group">
                                <p>{{mascota.fechav3}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="md-5 mx-2">
                            <label class="form-label fw-bold">Fecha Primera Vacuna</label>
                            <div class="form-group">
                                <input type="date" name="fechav3" class="form-control" placeholder="Title"
                                    value="{{mascota.fechav3}}">
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{/if}}
                    {{#if mascota.v3}}
                    <div class="mb-4 d-flex justify-content-around">
                        <div class="mx-2">
                            <label class="form-label fw-bold">Cuarta Vacuna</label>
                            <div class="form-group">
                                <input type="text" name="v4" class="form-control" placeholder="Nombre de La Vacuna"
                                    value="{{mascota.v4}}">
                            </div>
                        </div>
                          {{#if mascota.v4}}
                        <div class="md-5">
                            <label class="form-label fw-bold">Fecha</label>
                            <div class="form-group">
                                <p>{{mascota.fechav4}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="md-5 mx-2">
                            <label class="form-label fw-bold">Fecha Primera Vacuna</label>
                            <div class="form-group">
                                <input type="date" name="fechav4" class="form-control" placeholder="Title"
                                    value="{{mascota.fechav4}}">
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{/if}}
                    {{#if mascota.v4}}
                    <div class="mb-4 d-flex justify-content-around">
                        <div class="mx-2">
                            <label class="form-label fw-bold">Quinta Vacuna</label>
                            <div class="form-group">
                                <input type="text" name="v5" class="form-control" placeholder="Nombre de La Vacuna"
                                    value="{{mascota.v5}}">
                            </div>
                        </div>
                        {{#if mascota.v5}}
                        <div class="md-5">
                            <label class="form-label fw-bold">Fecha</label>
                            <div class="form-group">
                                <p>{{mascota.fechav5}}</p>
                            </div>
                        </div>
                        {{else}}
                        <div class="md-5 mx-2">
                            <label class="form-label fw-bold">Fecha Primera Vacuna</label>
                            <div class="form-group">
                                <input type="date" name="fechav5" class="form-control" placeholder="Title"
                                    value="{{mascota.fechav5}}">
                            </div>
                        </div>
                        {{/if}}
                    </div>
                    {{/if}}
                    <div class="form-group">
                        <label class="form-label fw-bold">Patologias de La Mascota</label>
                        <textarea name="descripcion" class="form-control">{{mascota.descripcion}}</textarea>
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label fw-bold">Medicamentos Suministrados a La Mascota</label>
                        <textarea name="medicamentos" class="form-control">{{mascota.medicamentos}}</textarea>
                    </div>
                </div>

                <div class="d-flex justify-content-center olvide1">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>